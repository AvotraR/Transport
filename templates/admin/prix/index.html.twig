{% extends 'admin/_base.html.twig' %}

{% block title %}Prix index{% endblock %}

{% block body %}
    <h1>Prix index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Depart</th>
                <th>Destination</th>
                <th>Prix</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for prix in prixes %}
            <tr>
                <td>{{ prix.id }}</td>
                <td>{{ prix.depart.ville }}</td>
                <td>{{ prix.destination.ville }}</td>
                <td>{{ prix.categorie.categorie }}</td>
                <td>{{ prix.prix }}</td>
                <td>
                    <a href="{{ path('app_prix_show', {'id': prix.id}) }}">show</a>
                    <a href="{{ path('app_prix_edit', {'id': prix.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_prix_new') }}">Create new</a>
{% endblock %}
