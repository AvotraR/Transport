{% extends 'base.html.twig'%}
{%block body%}
    {% include 'transport/_recherche.html.twig' %}
    {% if voitures is not empty %}
    <div class="col-xl-6 mt-5">
        <div class="card">
            <div class="card-body">
                <h4 class="header-title">Notifications Badges</h4>
                {% for voiture in voitures %}
                <a href="{{ path('liste_reservation_voiture',{'id':voiture.id,'date':voiture.datedepart|date('Y-m-d')})}}" class="btn btn-primary mb-3">
                    {{voiture.numero}}
                </a>
                {% endfor%}
            </div>
        </div>
    </div>
    {%endif%}
{%endblock%}