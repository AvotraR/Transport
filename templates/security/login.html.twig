{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{asset('css/login.css')}}">
{% endblock %}
{% block body %}
<div class="log">
    <div class="row mx-auto">
        <div class="col-md-6 mx-auto">
            <form method="post">
                <h1 class="mt-5 mb-3 text-center">Se connecter</h1>
                <div class="form-group">
                    <label for="inputEmail">Email</label>
                    <input type="number"  name="_username" id="inputEmail" class="form-control mb-3" autocomplete="email" required autofocus>
                </div>
                <div class="form-group">
                    <label for="inputPassword">Mot de passe</label>
                    <input type="password" name="_password" id="inputPassword" class="form-control" autocomplete="current-password" required>    
                </div>
                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >
                </br>
                <button class="connex btn btn-lg btn-block btn-warning mb-3" type="submit">
                    Connexion
                </button>
                </br></br>
            </form>
        </div>
    </div>
</div>
{% endblock %}
