{% extends 'base.html.twig' %}


{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<h1>BONJOUR</h1>
{{form_start(formBillet)}}
{{form_row(formBillet.destination)}}
{{form_row(formBillet.categorie)}}
<div class="prix">
    {%for prix in prixT%}
        {{prix.prix}}ar
    {%endfor%}
</div>
<div class="voiture">
    {%for voiture in voitureDispo%}
        {{voiture.numero}}
    {%endfor%}
</div>
<button type="submit">Envoyer</button>
{{form_end(formBillet)}}
{% endblock %}
