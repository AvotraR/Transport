{% extends 'base.html.twig' %}
{%block header%}
{%endblock%}
{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<h1>BONJOUR</h1>
<div class="container-fact">
    <p>Nom :{{billet.Nom}}</p>
    <p>Prenom {{billet.Prenom}}</p>
    <p>CIN :{{billet.CIN}}</p>
    <p>Depart :{{billet.depart.ville}}</p>
    <p>Destination :{{billet.destination.ville}}</p>
    <p>Categorie :{{billet.categorie.categorie}}</p>
    <p>Date de depart :{{billet.DateReservation|date('d/m/y')}}</p>
    <p>Nb personne :{{billet.quantite}}</p>
    <p>---------------------------------</p>
    <p>Prix total :{{billet.prix}}</p>
    
</div>

{% endblock %}