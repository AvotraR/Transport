{% extends 'base.html.twig'%}
{% block body %}
<section class="reservation">
    <div class="title-head">
        <h4>Reservation</h4>
        {% for type , messages in app.flashes%}
            {%for message in messages%}
                <div class="alert alert-{{type}}">
                    {{message}}
                </div>
            {% endfor%}
        {%endfor%}
    </div>
    <div id="container-billet">
        <div class="contents">
            <div class="imgContent col-md-6">
                <H1>COUCOU</H1>
            </div>
            <div class="main-content col-md-6">
                {{form_start(formBillet)}}
                <div class="row ">
                    <div class="form-group col-md-6">
                        {{form_row(formBillet.Nom)}}
                    </div>
                    <div class="form-group col-md-6">
                        {{form_row(formBillet.Prenom)}}
                    </div>
                    <div class="form-group col-md-12">
                        {{form_row(formBillet.Telephone)}}
                    </div>
                    <div class="form-group col-md-12">
                        {{form_row(formBillet.CIN)}}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        {{form_row(formBillet.depart)}}
                    </div>
                    <div class="col-md-4">
                        {{form_row(formBillet.destination)}}
                    </div>
                    <div class="col-md-4">
                        {{form_row(formBillet.categorie)}}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        {{form_row(formBillet.DateReservation)}}
                    </div>
                </div>
                <div class="row">
                    <div class="btn-action">
                        <button type="submit" id="verifie">Verifier</button>
                    </div>
                </div>
                {{form_end(formBillet)}}
            </div> 
        </div>
    </div>
</section>
{% endblock %}
